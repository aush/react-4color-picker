$start = 100%
$end = 50%

transitioned(selector, prop, start, end)
  .{selector}
    {block}
    {prop}: start
    transition: prop 0.3s cubic-bezier(0, 1, 0, 1)
  &:hover .{selector}
    {prop}: end

height100 =
  height: 100%

.vertical
  {height100}

.container
  transitioned(height-transitioned, height, $start, $end)
  +transitioned(width-transitioned, width, $start, $end)
    {height100}
